<persistence xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
             version="2.0">

    <persistence-unit name="default">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
        <properties>
            <property name="jakarta.persistence.jdbc.driver" value="org.hsqldb.jdbc.JDBCDriver"/>
            <!-- Commented properties moved to the factory method -->
            <property name="jakarta.persistence.jdbc.url" value=""/>
            <!--            <property name="jakarta.persistence.jdbc.user" value="SA"/>-->
            <!--            <property name="jakarta.persistence.jdbc.password" value=""/>-->

            <property name="hibernate.show_sql" value="false"/>
            <!-- <property name="hibernate.hbm2ddl.auto" value="create"/>-->
            <property name="hibernate.hikari.connectionTimeout" value="20000"/>
            <property name="hibernate.hikari.minimumIdle" value="1"/>
            <property name="hibernate.hikari.maximumPoolSize" value="10"/>
            <property name="hibernate.hikari.idleTimeout" value="30000"/>
            <property name="hibernate.hikari.poolName" value="default"/>
        </properties>
    </persistence-unit>

    <persistence-unit name="alternate">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
        <properties>
            <property name="jakarta.persistence.jdbc.driver" value="org.hsqldb.jdbc.JDBCDriver"/>
            <!-- Commented properties moved to the factory method -->
            <property name="jakarta.persistence.jdbc.url" value=""/>
            <!-- <property name="jakarta.persistence.jdbc.user" value="SA"/>-->
            <!-- <property name="jakarta.persistence.jdbc.password" value=""/>-->
            <property name="hibernate.show_sql" value="false"/>
            <!-- <property name="hibernate.hbm2ddl.auto" value="create"/>-->
            <property name="hibernate.hikari.connectionTimeout" value="20000"/>
            <property name="hibernate.hikari.minimumIdle" value="1"/>
            <property name="hibernate.hikari.maximumPoolSize" value="2"/>
            <property name="hibernate.hikari.idleTimeout" value="10000"/>
            <property name="hibernate.hikari.poolName" value="alternate"/>
            <property name="hibernate.hikari.readOnly" value="true"/>
        </properties>
    </persistence-unit>

</persistence>